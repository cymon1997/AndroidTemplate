<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorPlaceholder</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="FieldTransparent">
        <item name="android:padding">@dimen/base_padding</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
        <item name="android:background">@drawable/selector_field_transparent</item>
    </style>

    <style name="FieldValidator">
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="RatingBar">
        <item name="android:colorControlNormal">@color/colorStarBg</item>
        <item name="android:colorControlActivated">@color/colorStar</item>
    </style>

    <style name="BtnTransparent">
        <item name="android:padding">@dimen/base_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/selector_btn_transparent</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnOutline">
        <item name="android:padding">@dimen/base_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
        <item name="android:background">@drawable/selector_btn_outline</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuItem">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>
